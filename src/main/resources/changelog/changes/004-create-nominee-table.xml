<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation=" http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">
    <changeSet id="create-nominee-table" author="bharani">

        <createTable tableName="nominee">

            <column name="nominee_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="nominee_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="relationship" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="is_guardian" type="BOOLEAN" defaultValue="TRUE">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="nominee"
                baseColumnNames="account_id"
                constraintName="Fk_account_id"
                referencedTableName="account"
                referencedColumnNames="account_id"/>

    </changeSet>
</databaseChangeLog>